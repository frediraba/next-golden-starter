{
  "name": "next-golden-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --ignore-pattern \".next/**\" --ignore-pattern \"coverage/**\" --ignore-pattern \"playwright-report/**\"",
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "precommit:quick": "prettier -w . && eslint . --fix",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test --reporter=line",
    "test:ci": "npm run lint && npm run build && npm run test:unit && npm run test:e2e",
    "test:all": "npm run lint && npm run typecheck && npm run test:coverage && npx playwright install && npm run test:e2e && npm run build && node scripts/test-prod.mjs",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@prisma/client": "6.16.2",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.9",
    "next-themes": "0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "husky": "9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "16.2.0",
    "prettier": "^3.6.2",
    "prisma": "6.16.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier -w",
      "eslint --fix"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier -w"
    ]
  }
}
